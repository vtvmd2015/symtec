   <script type="text/javascript">
	$(document).ready(function() { 
		
		
        $("#taxclass_id").jCombo("<?php echo e(URL::to('taxgroupsdetails/comboselect?filter=tax_class_t:taxclass_id:taxclass_name')); ?>",
        {  selected_value : '<?php echo e($row["taxclass_id"]); ?>' });
        
        $("#taxcategory_id").jCombo("<?php echo e(URL::to('taxgroupsdetails/comboselect?filter=tax_category_t:taxcategory_id:taxcategory_name')); ?>",
        {  selected_value : '<?php echo e($row["taxcategory_id"]); ?>' });
        
        $("#taxcode_id").jCombo("<?php echo e(URL::to('taxgroupsdetails/comboselect?filter=tax_code_t:taxcode_id:taxcode_name')); ?>",
        {  selected_value : '<?php echo e($row["taxcode_id"]); ?>' });
         

		$('.removeCurrentFiles').on('click',function(){
			var removeUrl = $(this).attr('href');
			$.get(removeUrl,function(response){});
			$(this).parent('div').empty();	
			return false;
		});		
		
	});
	</script>		 
